<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.axovel.mytapzoapp.activities.FoodScreen2Activity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

        <TextView
            android:id="@+id/food_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Chicken "
            android:background="@drawable/shape_1"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/food_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Chicken "
                android:textSize="18sp"
                android:layout_toRightOf="@+id/food_text1"
                android:background="@drawable/shape_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
               />
            <TextView
                android:id="@+id/food_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Chicken "
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/food_text2"
                android:background="@drawable/shape_1"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/food_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Chicken "
                android:textSize="18sp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/food_text3"
                android:background="@drawable/shape_1"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>
    </LinearLayout>
</LinearLayout>
