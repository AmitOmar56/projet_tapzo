<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="250dp"
    android:background="@color/contentColor">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_white_bh_stroke">

        <ImageView

            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/productImageView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_black_light"
            android:text="flitkart"
            android:textSize="16sp"
            android:lines="1"
            android:layout_marginLeft="10dp"

            android:layout_below="@id/productImageView"

            android:id="@+id/titleProducttext"/>
        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textSize="14sp"
            android:lines="2"
            android:layout_below="@+id/titleProducttext"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="16sp"
            android:textColor="@color/bg_black_light"
            android:layout_below="@id/description_text"
            android:paddingTop="2dp"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>
</LinearLayout>
