<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/contentColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/shape_white_bh_stroke"
        android:orientation="vertical"
        android:paddingBottom="2dp">

        <ImageView

            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/titleProducttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImageView"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:text="flitkart"

            android:textColor="@color/bg_black_light"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleProducttext"
            android:layout_marginLeft="10dp"
            android:lines="2"
            android:text="description"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:text="price"
            android:textColor="@color/bg_black_light"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>