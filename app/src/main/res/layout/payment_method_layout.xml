<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/contentColor"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textSize="20sp"
                android:textColor="@color/bg_black_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:paddingBottom="10dp"
                android:text="If you have balance in your ola Money. it will be deducted from thee if not you will have to pay cash to the driver." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:text="If the have balance in your ola Money. is not sufficient ,the remaing amount has to be paid in a cash." />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
